{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./",
    "paths": {
      "@r/*": ["./*"],
      "@p/*": ["public/*"],
      "@src/*": ["src/*"],
      "@anim/*": ["src/animations/*"],
      "@comp/*": ["src/components/*"],
      "@c/*": ["src/constants/*"],
      "@h/*": ["src/hooks/*"],
      "@s/*": ["src/styles/*"],
      "@t/*": ["src/types/*"],
      "@ui/*": ["src/ui/*"],
      "@ut/*": ["src/utils/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/constants/links.ts"],
  "exclude": ["node_modules"]
}
